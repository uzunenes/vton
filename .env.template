# =============================================================================
# VTON SaaS - Complete Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Firebase Configuration (Required for Auth & Database)
# -----------------------------------------------------------------------------
# Get these from Firebase Console: https://console.firebase.google.com

# Client-side Firebase Config
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Server-side Firebase Admin (for Cloud Functions)
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Firebase Functions Base URL
NEXT_PUBLIC_FIREBASE_FUNCTIONS_BASE_URL=http://127.0.0.1:5001/your-project-id/us-central1

# -----------------------------------------------------------------------------
# Stripe Configuration (Required for Payments)
# -----------------------------------------------------------------------------
# Get these from Stripe Dashboard: https://dashboard.stripe.com

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Stripe Price IDs for your subscription plans
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PRICE_ID=price_xxxxxxxxxxxxx
NEXT_PUBLIC_STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_xxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# FAL.AI Configuration (Required for VTON)
# -----------------------------------------------------------------------------
# Get your API key at: https://fal.ai/dashboard/keys

FAL_KEY=your_fal_api_key_here

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# Application environment: development | staging | production
NODE_ENV=development
NEXT_PUBLIC_APP_MODE=development

# Site URL (update for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Enable mock mode for testing (set to 'false' for real API calls)
NEXT_PUBLIC_USE_MOCK=false

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# -----------------------------------------------------------------------------

# Mixpanel Token (optional - for user analytics)
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here

# Sentry DSN (optional - for error tracking)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable A/B comparison between VTON models
NEXT_PUBLIC_ENABLE_AB_COMPARISON=false

# Video generation duration: 5 or 10 seconds
NEXT_PUBLIC_VIDEO_DURATION=5

# Enable cost tracking for API calls
NEXT_PUBLIC_ENABLE_COST_TRACKING=true

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------

# API request timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=60000

# Maximum retry attempts for failed requests
NEXT_PUBLIC_MAX_RETRIES=3

# -----------------------------------------------------------------------------
# Storage & Output
# -----------------------------------------------------------------------------

# Output directory for session files
NEXT_PUBLIC_OUTPUT_DIRECTORY=outputs

# -----------------------------------------------------------------------------
# Contentful CMS (Optional - for blog content)
# -----------------------------------------------------------------------------

CONTENTFUL_SPACE_ID=your_space_id
CONTENTFUL_ACCESS_TOKEN=your_access_token
CONTENTFUL_REVALIDATE_SECRET=your_revalidate_secret

